<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>PDF Merger Result (Local Storage)</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container my-5">
      <h2 class="mb-3">PDF Merge Result</h2>

      <div class="mb-4">
        <h4>Download Merged PDF</h4>
        <a href="<%= mergedFileUrl %>" target="_blank" class="btn btn-success" download
          >Download Merged PDF</a
        >
      </div>

      <% if (skippedFiles && skippedFiles.length > 0) { %>
      <div class="alert alert-warning">
        <strong>Skipped Files:</strong>
        <ul>
          <% skippedFiles.forEach(function(file) { %>
          <li><%= file %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>

      <div class="mb-4">
        <a href="/" class="btn btn-primary">Start New Merge</a>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
